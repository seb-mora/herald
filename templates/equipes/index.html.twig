{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Herald - Administration{% endblock %}

{% block body %}

<div class="max-w-5xl mx-auto items-stretch flex flex-column justify-center bg-white/[.75] min-h-[82%] ">
    <div class=" mt-12 pb-12 overflow-x-hidden h-[670px] lg:h-[650px] w-[100%] lg:w-[900px] justify-center text-center bg-white rounded-2xl shadow-2xl mx-auto">
        <div class="text-center text-2xl">
            <h1 class="text-4xl min-[950px]:text-5xl font-bold pt-12 pb-8">Equipes</h1>
            <a class="nav-link" href="{{ path('admin_equipes_new') }}">
                <button class="btn border-2 border-emerald-500 hover:bg-emerald-500 hover:font-bold hover:text-white duration-200">Créer une nouvelle équipe</button>
            </a> 
            <div class="overflow-x-hidden h-[670px] lg:h-[450px] ml-[20px]">
                {% for equipe in equipes %}  
                    <a href='{{ path('admin_equipes_show', {'id': equipe.id}) }}'>
                        <div class=" bg-zinc-50 flex flex-row justify-between text-center rounded-xl drop-shadow-md hover:scale-105 hover:drop-shadow-2xl hover:transform-gpu hover:bg-white bgease-out duration-200 m-1 h-24 lg:h-16 mx-10">
                            <div class="basis-2/5  grow my-auto text-2xl lg:text-2xl">{{ equipe.nom }}</div>
                            <div class="basis-1/5 grow my-auto hidden md:block lg:text-2xl">{{ equipe.responsable is not null ? equipe.responsable : 'Pas de responsable'}}</div>
                            <div class="basis-2/5  grow my-auto lg:text-2xl">{{ equipe.chantier is not null ? 
                            equipe.chantier ~ ' à ' ~ equipe.localisation : 'Pas de chantier en cours'  }}</div>
                        </div>
                    </a>    
                {% endfor %}                    
            </div>       
        </div>
    </div>
</div>

{% endblock %}
