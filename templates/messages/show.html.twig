{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Herald - Administration{% endblock %}

{% block body %}

<div class="max-w-5xl mx-auto items-stretch flex-col justify-center bg-white/70 h-[82%] text-center grid content-evenly">
    <div class="justify-center w-screen lg:w-[900px] mx-auto bg-white pt-4 text-center rounded-2xl shadow-2xl pb-8">
        <div class="justify-center pb-2 text-center">      
            <h1 class="text-4xl lg:text-5xl font-bold pt-10" >{{message.sujet}} </h1>
        </div>
        <p class="text-2xl" >Envoyé à 
            <a href="{{ path('show_employe', {'id': message.fkDestinataire.id}) }}" class="font-bold">{{ message.fkDestinataire.prenom }} {{ message.fkDestinataire.nom }}
            </a>
        </p>
        <p class="text-xl " > le {{ message.date|date('d-m-Y H:i:s')}}</p>
            {% if message.lu %}
                <p class="text-emerald-600 text-xl"> Ouvert </p> 
            {% else %}
                <p class="text-red-500  text-xl"> Non ouvert </p> 
            {% endif %}
        <p class="text-xl pt-8 pb-10 px-8">{{ message.contenu}}</p>
        <a class="nav-link " href="{{ path('admin_messages_index') }}">
            <button class="btn border-2 border-emerald-500 hover:bg-emerald-500 hover:font-bold hover:text-white duration-200 ">Retour aux messages</button>
        </a> 
    </div>
</div>

{% endblock %}